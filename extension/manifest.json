{
	"manifest_version": 2,

	"name": "WordBird",
	"description": "Change from Word to Word",
	"version": "0.1",

	"permissions": [
		"storage"
	],

	"browser_action": {
		"default_icon": {
			"19": "icons/icon-on.19.png",
			"48": "icons/icon-on.48.png",
			"128": "icons/icon-on.128.png"
		}
	},

	"background": {
		"scripts": ["background.js"],
		"persistent": true
	},

	"options_ui": {
		"page": "options/index.html",
		"chrome_style": false
	},

	"options_page": "options/index.html",

	"content_scripts": [{
		"matches": ["*://*/*"],
		"js": ["content_script.js"],
		"run_at": "document_end"
	}]
}
